<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tooblar_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_title_video"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_youtube" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Midia - App Treino Estacio"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/play_treino"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/txt_title2"
        android:layout_margin="6dp" />


    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar_video"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_label"
        android:padding="6dp"
        android:text="Atividades disponiveis"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_about"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/play_treino"
        android:text="Treino App - Estacio \nTurma de ADS B3 \n2º periodo \n Profª Gandalpf o Cinzento."/>
</RelativeLayout>