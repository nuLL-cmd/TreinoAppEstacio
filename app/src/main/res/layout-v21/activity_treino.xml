<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TreinoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_treino"
        android:background="@android:color/white">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:title="f"
            android:layout_height="match_parent"
            android:id="@+id/toolbar_treino">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:backgroundTint="#1E88E5"
        android:id="@+id/bootom_treino"
        android:layout_alignParentBottom="true"
        tools:ignore="BottomAppBar" >


    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#1E88E5"
        app:backgroundTint="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        app:borderWidth="6dp"
        android:src="@drawable/ic_directions_run"
        android:id="@+id/fb_iniciar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fb_iniciar"
        android:layout_alignBottom="@id/fb_iniciar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@id/fb_iniciar"
        android:gravity="center"
        android:text="Ir para tela de treino"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Selecione a atividade para ver o video "
        android:textSize="30sp"
        android:layout_below="@id/appbar_treino"
        android:background="@drawable/background_label"
        android:id="@+id/txt_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_about"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/bootom_treino"
        android:text="Treino App - Estacio \nTurma de ADS B3 \n2º periodo \n Profª Gandalpf o Cinzento."/>
    <ListView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/lista_treino"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/txt_title"
        android:layout_above="@id/txt_about"/>
</RelativeLayout>